<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Header with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âŒ Refuser le Rendez-vous"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Reject icon"
            app:tint="@android:color/holo_red_dark" />
    </LinearLayout>

    <!-- Patient Info Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Patient"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvPatientNameReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Warning Notice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFEBEE"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â„¹ï¸"
            android:textSize="20sp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Le patient sera notifiÃ© de votre refus par email"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_dark"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Rejection Reason -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ðŸ“ Raison du refus *"
        android:layout_marginBottom="16dp"
        app:counterEnabled="true"
        app:counterMaxLength="200"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRejectReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="2"
            android:maxLines="4"
            android:gravity="top"
            android:scrollbars="vertical"
            android:maxLength="200"
            android:hint="Ex: Indisponible Ã  cette heure, urgence..." />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Available Hours (Optional) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ðŸ• Heures disponibles (optionnel)"
        android:layout_marginBottom="20dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAvailableHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ex: Lundi-Vendredi 8h-12h" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelReject"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Annuler"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:backgroundTint="@android:color/transparent"
            app:elevation="0dp"
            app:cornerRadius="10dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmReject"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="âŒ Refuser"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            app:backgroundTint="@android:color/holo_red_dark"
            app:cornerRadius="10dp"
            app:elevation="2dp"
            app:icon="@drawable/ic_close"
            app:iconTint="@color/white"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>
</LinearLayout>