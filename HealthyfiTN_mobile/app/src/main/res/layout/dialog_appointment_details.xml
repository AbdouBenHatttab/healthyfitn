<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ DÃ©tails du Rendez-vous"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Doctor Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃ©decin"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDoctorNameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentDateDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 novembre 2025"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentTimeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAppointmentTypeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONSULTATION"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Reason -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motif"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentReasonDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultation de routine"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statut"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentStatusDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULED"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</ScrollView>