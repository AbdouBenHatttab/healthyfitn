<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ DÃ©tails du Rendez-vous"
            android:textSize="20sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Doctor Name (For Patient View) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃ©decin"
            android:textSize="12sp"
            android:textColor="#757575"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDoctorNameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Patient Name (For Doctor View) -->






        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="12sp"
            android:textColor="#757575"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentDateDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/11/2025"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />



        <!-- Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure"
            android:textSize="12sp"
            android:textColor="#757575"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentTimeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />



        <!-- Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="12sp"
            android:textColor="#757575"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAppointmentTypeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO_CALL"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />



        <!-- Reason -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motif"
            android:textSize="12sp"
            android:textColor="#757575"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentReasonDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultation de routine"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />



        <!-- Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statut"
            android:textSize="12sp"
            android:textColor="#757575"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentStatusDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULED"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />



        <!-- Rejection Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRejectionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFEBEE"
            app:cardCornerRadius="8dp"
            app:strokeColor="#F44336"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rendez-vous RefusÃ©"
                    android:textColor="#F44336"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRejectionReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Raison du refus"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvAvailableHours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Heures disponibles suggÃ©rÃ©es"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvRespondedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Date de rÃ©ponse"
                    android:textSize="12sp"
                    android:textColor="#757575" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Cancellation Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCancellationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFF3E0"
            app:cardCornerRadius="8dp"
            app:strokeColor="#FF9800"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rendez-vous AnnulÃ©"
                    android:textColor="#FF9800"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCancelledBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="AnnulÃ© par: N/A"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvCancellationReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Raison de l'annulation"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Completed Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCompletedDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="#E8F5E9"
            app:cardCornerRadius="8dp"
            app:strokeColor="#4CAF50"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consultation TerminÃ©e"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnostic"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvDiagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Diagnostic details"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prescription"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Prescription details"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/llDoctorNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes du Docteur"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDoctorNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Doctor notes details"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Notes Card (Optional - For Doctor View) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardNotesDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNotesDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes du rendez-vous"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Close Button (For Doctor View) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fermer"
            android:layout_marginTop="16dp"
            app:cornerRadius="8dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>