<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Patient Information Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Information"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvPatientNameDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvPatientEmailDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvPatientPhoneDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Appointment Statistics Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appointment Statistics"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvTotalAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: 0"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvCompletedAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completed: 0"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvCancelledAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelled: 0"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Dates Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Important Dates"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvFirstVisitDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Visit: Not available"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvLastAppointmentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Appointment: None"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvNextAppointmentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Appointment: None"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

</LinearLayout>