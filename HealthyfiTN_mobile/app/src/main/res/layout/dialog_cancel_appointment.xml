<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="❌ Annuler le Rendez-vous"
        android:textSize="20sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <!-- Patient Name -->
    <TextView
        android:id="@+id/tvPatientNameCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient: John Doe"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="16dp" />

    <!-- Reason -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Raison de l'annulation"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCancelReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Warning -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠️ Cette action est irréversible"
        android:textSize="12sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="16dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:backgroundTint="@android:color/transparent"
            app:elevation="0dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler RDV"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            app:backgroundTint="@android:color/holo_red_dark"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>
</LinearLayout>