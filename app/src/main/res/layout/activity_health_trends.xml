<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- ðŸŽ¯ Header avec titre et pÃ©riode -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_gradient"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Bouton retour et titre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back_trends"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white"
                android:contentDescription="Retour" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ã‰volution de santÃ©"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- SÃ©lecteur de pÃ©riode -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacingHorizontal="8dp" />

        </HorizontalScrollView>

    </LinearLayout>

    <!-- ðŸ“Š Contenu principal -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ðŸ† Carte principale - Score de santÃ© global -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score de santÃ© moyen"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvMainScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85.0/100"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:id="@+id/tvMainTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†‘ En amÃ©lioration"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="16dp"
                            android:textColor="@android:color/holo_green_dark" />

                    </LinearLayout>

                    <!-- Graphique principal -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/mainChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:id="@+id/tvDataPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 jours de donnÃ©es analysÃ©es"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ðŸ“Š Grille de mÃ©triques -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MÃ©triques dÃ©taillÃ©es"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <!-- Ligne 1: Pas et FrÃ©quence cardiaque -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Carte Pas -->
                <include
                    layout="@layout/item_metric_card"
                    android:id="@+id/cardSteps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp" />

                <!-- Carte FrÃ©quence cardiaque -->
                <include
                    layout="@layout/item_metric_card"
                    android:id="@+id/cardHeartRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Ligne 2: Sommeil et Stress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Carte Sommeil -->
                <include
                    layout="@layout/item_metric_card"
                    android:id="@+id/cardSleep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp" />

                <!-- Carte Stress -->
                <include
                    layout="@layout/item_metric_card"
                    android:id="@+id/cardStress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Ligne 3: Hydratation et Poids -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Carte Hydratation -->
                <include
                    layout="@layout/item_metric_card"
                    android:id="@+id/cardHydration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp" />

                <!-- Carte Poids -->
                <include
                    layout="@layout/item_metric_card"
                    android:id="@+id/cardWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- â³ Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <!-- âŒ Erreur -->
    <LinearLayout
        android:id="@+id/errorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_error"
            app:tint="#E0E0E0"
            android:contentDescription="Erreur" />

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erreur de chargement"
            android:textSize="16sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RÃ©essayer"
            android:backgroundTint="@color/primary" />

    </LinearLayout>

</RelativeLayout>